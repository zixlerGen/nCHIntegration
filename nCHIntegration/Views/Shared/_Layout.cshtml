<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - navify Clinical Hub</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/nCHIntegration.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" href="https://navify.roche.com/#products" target="_blank">
                    @* <img src="/images/navify-logo.90f68ab2.svg" alt="navify Clinical Hub" style="height: 25px;" /> *@
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"  
                       aria-expanded="false" aria-label="Toggle navigation">  
                   <span class="navbar-toggler-icon"></span>  
               </button>  
               <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">  
                   <ul class="navbar-nav flex-grow-1">  
                       <li class="nav-item">  
                           <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>  
                       </li>  
                    @*    <li class="nav-item">  
                           <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>  
                       </li>  *@ 
                       @if (User.IsInRole("Admin"))  
                       {  
                           <li class="nav-item">  
                               <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>  
                           </li>  
                       }  
                       @if (User.IsInRole("User"))  
                       {  
                          @*  <li class="nav-item">  
                               <a class="nav-link" asp-controller="Patient" asp-action="Index">KKU Patient</a>  
                           </li>   *@
                           <li class="nav-item">  
                               <a class="nav-link" asp-controller="PatientCRA" asp-action="Index">CRA Patient</a>  
                           </li>  
@* 
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="CRADropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">CRA Patient</a>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="CRADropdown">
                                        <li>
                                            <a class="dropdown-item" asp-controller="PatientCRA" asp-action="Index">MDT Appointment</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="PatientCRA" asp-action="Index">Patient List</a>
                                        </li>
                                    </ul>
                            </li> *@
                       }  
                       <partial name="_LoginPartial" />  
                   </ul>  
               </div>  
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
   
    <div aria-hidden="true" class="relative w-full h-[15vw] overflow-hidden after:absolute after:z-10 after:w-full after:h-full after:border-[1px] after:border-white">  
       @*  <video data-qa-id="media-video" class="absolute w-full top-0" autoplay="" loop="" playsinline="">  
            <source src="/media/pathway.c5e7aa68.webm">
            <source src="/media/pathway.85c4fdc7.mp4">  
        </video>   *@
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - navify Clinical Hub - <a href="https://navify.roche.com/marketplace/products/navify-clinical-hub-for-tumor-boards#overview" target="_blank">Overview</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
